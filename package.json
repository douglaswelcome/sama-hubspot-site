{
  "name": "samasource_site_boom",
  "version": "1.0.0",
  "description": "A dev setup for the Samasource Website",
  "main": "index.js",
  "scripts": {
    "devzone": "concurrently --kill-others --raw \"gulp dev\" \"npx hs watch --portal=DEV _codeDist/ .\"",
    "assetzone": "gulp watchAssetFiles",
    "hubupDEV": "hs upload --portal=DEV _codeDist . ",
    "hubupPROD": "hs upload --portal=PROD _codeDist .",
    "pullModules": "hs fetch --portal=DEV --overwrite    _codeDist/markup/modules_from_blocks/ markup/modules_from_blocks/ ",
    "mjml": "./node_modules/.bin/mjml ",
    "mjml:process": "./node_modules/.bin/mjml _src/markup/email/**/* ",
    "mjml:watch": "onchange '_src/markup/email/**/*' -- mjml _src/markup/email/templates/**/* -o _codeDist/markup/templates_email/"
  },
  "author": "Douglas Welcome",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "concurrently": "^5.0.0",
    "dotenv": "^8.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.0",
    "gulp-changed": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^6.1.1",
    "gulp-newer": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-terser": "^1.2.0",
    "gulp-util": "^3.0.8",
    "js-yaml": "^3.13.1",
    "mjml": "^4.5.1",
    "onchange": "^6.1.0",
    "vinyl-ftp": "^0.6.1",
    "yargs": "^14.2.0"
  },
  "dependencies": {
    "@hubspot/cms-cli": "^1.0.1"
  }
}
