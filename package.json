{
  "name": "samasource_site_boom",
  "version": "1.0.0",
  "description": "A dev setup for the Samasource Website",
  "main": "index.js",
  "scripts": {
    "devzone": "concurrently --kill-others --raw \"gulp dev\" \"npx hs watch --portal=DEV _codeDist/ .\"",
    "imagemin_script": "onchange -o '> .npm-scripts/imagemin/.changelog' '_src/img/**/*' -- echo '{{changed}}'",
    "asset:optimize": "gulp imgOpt",
    "asset:upload": "hs filemanager upload --portal=PROD _tempImg custom/assets/static-assets/img/",
    "asset:cleanTemp": "del _tempImg/**/*",
    "asset:process": "npm run asset:optimize && npm run asset:upload && npm run asset:cleanTemp",
    "imgzone": "onchange '_src/img/**/*' -- npm run asset:process",
    "hubupDEV": "hs upload --portal=DEV _codeDist . ",
    "hubupPROD": "hs upload --portal=PROD _codeDist .",
    "pullModules": "hs fetch --portal=DEV --overwrite    _codeDist/markup/modules_from_blocks/ markup/modules_from_blocks/ ",
    "mjml:post": "replace-in-file '<!doctype html>' '<!--\ntemplateType: email \nisAvailableForNewContent: true\n--> \n<!doctype html>' _codeDist/markup/templates_email/**/*.html --verbose",
    "mjml:process": "mjml _src/markup/email/templates/**/* -o _codeDist/markup/templates_email/ ",
    "mjml:run": "npm run mjml:process && npm run mjml:post",
    "mjml:watch": "onchange '_src/markup/email/**/*' -- npm run mjml:run",
    "emaildevzone": "concurrently --kill-others --raw \"npm run mjml:watch\" \"npx hs watch --portal=PROD _codeDist/markup/templates_email/ markup/templates_email/\"",
    "web": "concurrently --kill-others --raw \"npm run imgzone\" \"npm run devzone\""
  },
  "author": "Douglas Welcome",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.26.7",
    "concurrently": "^5.2.0",
    "del-cli": "^3.0.0",
    "dotenv": "^8.1.0",
    "ftp": "^0.3.10",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.0",
    "gulp-changed": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-newer": "^1.4.0",
    "gulp-sass": "^4.1.0",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-terser": "^1.2.0",
    "imagemin": "^7.0.1",
    "imagemin-cli": "^5.1.0",
    "imagemin-giflossy": "^5.1.10",
    "imagemin-mozjpeg": "^8.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.1.0",
    "mjml": "^4.6.2",
    "onchange": "^6.1.0",
    "replace-in-file": "^4.2.0",
    "vinyl-ftp": "^0.6.1",
    "yargs": "^14.2.0"
  },
  "dependencies": {
    "@hubspot/cms-cli": "^1.1.2",
    "js-yaml": "^3.13.1"
  }
}
